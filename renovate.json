{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base"
	],
	"packageRules": [
		{
			"additionalBranchPrefix": "min_",
			"commitMessagePrefix": "min: ![confidence](https://badges.renovateapi.com/packages/{{datasource}}/{{replace '/' '%2f' depName}}/{{{toVersion}}}/confidence-slim/{{{fromVersion}}}) ",
			"addLabels": [
				"chore-renovate-minor"
			],
			"matchUpdateTypes": ["minor", "patch"]
		},
		{
			"groupName": "major-updates",
			"additionalBranchPrefix": "mjr_",
			"commitMessagePrefix": "mjr: ![confidence](https://badges.renovateapi.com/packages/{{datasource}}/{{replace '/' '%2f' depName}}/{{{toVersion}}}/confidence-slim/{{{fromVersion}}})  ",
			"addLabels": [
				"chore-renovate-major"
			],
			"matchUpdateTypes": ["major"]
		}
	]
}

